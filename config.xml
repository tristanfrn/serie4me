<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.series.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SeriesManager</name>
    <description>
        Gérez vos séries simplement.
    </description>
    <author email="tfarneau@gmail.com" href="http://www.tristanfarneau.fr">
        Tristan Farneau
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="10000" />
</widget>
